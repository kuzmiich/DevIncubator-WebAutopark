@model WebAutopark.BusinessLogic.Models.OrderDetailViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h2 class="mb-2 text-center">Create Order</h2>
    </div>
    <div class="card-body">
        <form asp-action="OrderDetailCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="OrderId" hidden="hidden"/>

            <div class="form-group">
                <label asp-for="DetailId" class="control-label ml-md-1"></label>
                <input asp-for="DetailId" class="form-control"/>
                <span asp-validation-for="DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailAmount" class="control-label ml-md-1"></label>
                <input asp-for="DetailAmount" class="form-control"/>
                <span asp-validation-for="DetailAmount" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-primary" asp-controller="Vehicle" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}