@model IEnumerable<WebAutopark.Core.Entities.Vehicle>

@{ ViewData["Title"] = "VehicleList"; }

<h1>VehicleType page</h1>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                VehicleType
            </th>
            <th>
                Model
            </th>
            <th>
                Registration date
            </th>
            <th>
                Weight
            </th>
            <th>
                Manufacture Year
            </th>
            <th>
                Mileage
            </th>
            <th>
                Fuel tank
            </th>
            <th>
                Color
            </th>
            <th>
                Consumption
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.TypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufactureYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineConsumption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KmPerFullTank())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GetCalcTaxPerMonth())
                </td>
                <td class="text-center">
                    @Html.ActionLink("View", "Get", new { id=item.VehicleTypeId }) |
                    @Html.ActionLink("Edit", "Update", new { id=item.VehicleTypeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VehicleTypeId })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="Create">Create new</a>
</div>
