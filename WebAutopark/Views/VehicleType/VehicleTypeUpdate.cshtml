@model WebAutopark.BusinessLogic.Models.VehicleTypeViewModel

@{
    ViewData["Title"] = "Update VehicleType";
}

<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h2 class="text-center">Update VehicleType</h2>
    </div>
    <div class="card-body">
        <form asp-action="VehicleTypeUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="VehicleTypeId" hidden="hidden"/>

            <div class="form-group">
                <label asp-for="TypeName" class="control-label ml-md-1"></label>
                <input asp-for="TypeName" class="form-control"/>
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxCoefficient" class="control-label ml-md-1"></label>
                <input asp-for="TaxCoefficient" class="form-control"/>
                <span asp-validation-for="TaxCoefficient" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-outline-success"/>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}